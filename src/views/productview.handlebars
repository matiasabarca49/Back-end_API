<header>
   <nav class="navbar bg-primary d-flex justify-content-around position-relative" data-bs-theme="dark">
        <div>
          <a class="navbar-brand" href="http://localhost:8080/products">Tienda</a>
        </div>
        <div class="d-flex align-items-center gap-2">
            <div class="text-white fs-5">{{userLoged.user}}</div>
            {{#if userLoged.user}}
                <div>
                    <a class="btn btn-light" href="/api/sessions/perfil">Ver Perfil</a>
                </div>
                <div>
                    <a class="btn btn-danger" href="/api/sessions/logout">salir</a> 
                </div>
            {{/if}}
            {{#unless userLoged.user}}
                <div>
                    <a class="btn btn-light" href="/api/sessions/login">Login</a>
                </div>
            {{/unless}}
            <div>
                <a class="btn" href="/"><img style="width: 30px; filter: invert(100%)" src="../../img/home.png" alt="home"></a>
            </div>
        </div>
        <div class="position-absolute" style="right:40px; top: 15px;">
            <a href="http://localhost:8080/products/pay" type="button" class="btn btn-primary position-relative">
                <img style="width: 30px; filter: invert(100%)" src="../img/cart.png" />
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="totalCountNav">
                </span>
            </a>
        </div>
    </nav>
</header>
<main class="container-fluid m-5">
    <a class="btn btn-primary mb-4" href="http://localhost:8080/products"> Regresar </a>
    <div class="row ">
        <div  class="col-6 position-relative" id="thumbnail">
            <h4 class="position-absolute text-body-tertiary mt-3 ms-3 p-2 bg-opacity-25 bg-body-tertiary rounded-5 shadow-lg" id="category"></h4>
            <img src="../img/image.jpg" class="img-thumbnail" alt="...">
        </div>
        <div class="col-6">
            <div>
                <h1 id="title"></h1>
                <h2 id="price"></h2>
                <p id="description"></p>
                <h5 class="text-body-tertiary" id="stock"></h5>
                <button class="btn btn-success" id="addCart">Agregar al carrito</button>
            </div>
        </div>
    </div>
</main>
<script src="../js/cart.js"></script>
<script src="../js/productview.js"></script>